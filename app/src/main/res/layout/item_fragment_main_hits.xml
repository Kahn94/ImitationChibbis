<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="2dp"
    card_view:cardCornerRadius="24dp"
    card_view:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/item_main_layout_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/item_main_hits_image_logo"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            tools:background="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/item_main_hits_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_main_hits_image_logo"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            tools:text="AGAMA" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>